<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="public/styles.css">
    <title>Delete your Post</title>
</head>
<body>
    <%- include("partials/header.ejs")%>
    <h2 class="fs-8 edit-post-title"><strong>Delete Your Post</strong></h2>
    <%if(p_content.length===0){%>
      <%-include("partials/no_content.ejs")%>
    <%}%>
    <div class="delete-post container">
        <%for(var i=0;i<p_content.length;i++) { %>
        <div class="card">
            <div class="card-header">
              <h3><%=p_content[i]["title"]%></h3>
            </div> 
            <div class="card-body">
              <p class="card-text"><%=p_content[i]["content"]%></p>
            </div>
            <div class="del-selection"><form action="/delete" method="POST"><button  type="submit" name="title" value=<%=p_content[i]["content"]%> class="btn btn-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                  </svg> Delete</button></form></div>
        </div>
        <%}%>
      </div>
    <%-include("partials/footer.ejs");%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>